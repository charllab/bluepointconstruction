{% extends '_layouts/site' %}

{% import '_includes/macros' as macros %}

{% set videoFile = craft.assets.id(1122).one() %}

{% css %}
    @media (max-width: 991.98px) {
        .full-hero__wrapper {
            background-image: url({{ entry.headerBackgroundImage.one().getUrl() }});
            background-size: cover;
            background-position: center right;
        }
    }
    @media (min-width: 991.98px) {
        .full-hero__wrapper {
            background-image: url({{ siteUrl }}assets/images/video-thumb.jpg);
        }
    }
{% endcss %}

{% block content %}
    <main>
        <div class="full-hero__wrapper full-hero--overlay full-hero__block-height d-flex align-items-start flex-column position-relative py-2 py-sm-0">
            <video autoplay muted loop id="hero-video" class="d-none d-lg-block">
                <source src="{{ videoFile.url }}" type="video/mp4">
            </video>
            <div class="w-100 my-auto text-center">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-10 col-xxl-8 col-xxxl-7">
                            {{ entry.intro }}
                        </div>
                    </div><!-- row -->
                </div><!-- container -->
            </div><!-- w-100 -->

            <a href="#content" class="js-scrollable-anchor full-hero__anchor d-none d-md-block">
                <svg xmlns="http://www.w3.org/2000/svg"
                     viewBox="0 0 114.272 42.63"
                     class="full-hero__anchor-svg"
                >
                    <g id="js-scrollable-fullbanner-arrow"
                       data-name="js-scrollable-fullbanner-arrow"
                       transform="translate(-901.364 -1002.516)">
                        <line id="Line_1"
                              data-name="Line 1"
                              x1="57" y1="39.338"
                              transform="translate(902.5 1004.162)"
                              fill="none"
                              stroke="#fff"
                              stroke-width="4"/>
                        <line id="Line_2"
                              data-name="Line 2"
                              y1="39.338"
                              x2="57"
                              transform="translate(957.5 1004.162)"
                              fill="none"
                              stroke="#fff"
                              stroke-width="4"/>
                    </g>
                </svg>
            </a>
        </div><!-- full-hero__wrapper -->

        <div id="content" class="container-fluid full-page__content white-border--top">
            <div class="row">

                <div class="col-lg-6 full-page__content__with-bg justify-content-lg-end white-border--bottom-md-down white-border--half--right--lg-up"
                     style="background-image: url({{ entry.aboutUsBackgroundImage.one().getUrl() }});">
                    <div class="container full-page__content--max-width ml-lg-auto mr-lg-0">
                        <div class="row">
                            <div class="col-12 offset-lg-1 col-lg-10 offset-xxl-2 col-xxl-7 pb-3 pb-lg-6 pt-4 pt-lg-6">
                                {{ entry.aboutUsText }}
                                <a href="{{ siteUrl }}about"
                                   class="btn btn-clear btn-lg text-white">
                                    Learn More
                                    <img src="{{ siteUrl }}assets/images/btn_arrow.svg" class="btn__svg-arrow">
                                </a>
                            </div><!-- col -->
                        </div><!-- row -->
                    </div><!-- container -->
                </div><!-- col -->

                <div class="col-lg-6 justify-content-lg-start white-border--half--left--lg-up"
                     style="background-image: url({{ entry.ourServicesBackgroundImage.one().getUrl() }});">

                    <div class="row">
                        <div class="col-12 full-page__content__with-bg justify-content-lg-start white-border--bottom"
                             style="background-image: url({{ entry.ourServicesBackgroundImage.one().getUrl() }});">
                            <div class="container full-page__content--max-width ml-lg-0 mr-lg-auto">
                                <div class="row">
                                    <div class="col-12 offset-lg-1 col-lg-10 offset-xxl-2 col-xxl-7 pb-3 pb-lg-6 pt-4 pt-lg-6">
                                        {{ entry.ourServicesText }}
                                        <a href="{{ siteUrl }}services"
                                           class="btn btn-clear btn-lg text-white">
                                            What We Do
                                            <img src="{{ siteUrl }}assets/images/btn_arrow.svg" class="btn__svg-arrow">
                                        </a>
                                    </div><!-- col -->
                                </div><!-- row -->
                            </div><!-- container -->
                        </div><!-- col -->

                        <div class="col-12 full-page__content__with-bg justify-content-lg-start"
                             style="background-image: url({{ entry.contactBackgroundImage.one().getUrl() }});">
                            <div class="container full-page__content--max-width ml-lg-0 mr-lg-auto">
                                <div class="row">
                                    <div class="col-12 offset-lg-1 col-lg-10 offset-xxl-2 col-xxl-7 pb-3 pb-lg-6 pt-4 pt-lg-6">
                                        {{ entry.contactText }}
                                        <a href="{{ siteUrl }}contact"
                                           class="btn btn-clear btn-lg text-white">
                                            Get In Touch
                                            <img src="{{ siteUrl }}assets/images/btn_arrow.svg" class="btn__svg-arrow">
                                        </a>
                                    </div><!-- col -->
                                </div><!-- row -->
                            </div><!-- container -->
                        </div><!-- col -->
                    </div>

                </div>
            </div><!-- row -->
        </div><!-- container-fluid -->
    </main>
{% endblock %}