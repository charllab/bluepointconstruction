{% extends '_layouts/site' %}

{% import '_includes/macros' as macros %}

{% block content %}
    <main>
        {% include '_includes/page-header' %}

        <div class="white-page__border-bottom">
            <div class="container py-4">
                <div class="row justify-content-center">
                    <div class="col-sm-10 col-xl-8 col-xxl-6">
                        <h1 class="h2">{{ entry.title }}</h1>
                        {% include '_includes/content-matrix' with { 'field' : entry.pageContent } %}

                        <div class="row">
                            {% for block in entry.team.all() %}
                                <div class="col-sm-6 mb-4">
                                    <h4 class="mb-0">{{ block.staffName }}</h4>
                                    <p class="mb-2">{{ block.staffTitle }}</p>
                                    {{ block.staffEmailAddress }}
                                </div>
                            {% endfor %}
                        </div>

                        <h3>Testimonials</h3>
                        <div id="testimonials-carousel" class="carousel slide" data-interval="10000" data-ride="carousel">
                            <div class="carousel-inner">
                                {% for block in entry.testimonials.all() %}
                                    <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                                        <blockquote>
                                            <p class="mb-2">{{ block.text }}</p>
                                            <footer class="blockquote-footer">{{ block.reference }}</footer>
                                        </blockquote>
                                    </div>
                                {% endfor %}
                            </div>

                            <ol class="carousel-indicators">
                                {% for block in entry.testimonials.all() %}
                                    <li data-target="#testimonials-carousel" data-slide-to="{{ loop.index - 1 }}" class="{{ loop.first ? 'active' : '' }}"></li>
                                {% endfor %}
                            </ol>
                        </div>
                    </div><!-- col -->
                </div><!-- row -->
            </div><!-- container -->
        </div><!-- white-page__border-bottom -->
    </main>
{% endblock %}